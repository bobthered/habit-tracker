<div class="page page-signup bg-gray-800 justify-end page-anim-hidden">
  <form action="#" class="form-signup flex flex-col p-8 space-y-16">
    <h1 class="uppercase text-3xl text-gray-50">Sign Up</h1>
    <div class="flex flex-col space-y-4">
      <div class="input-container email">
        <input type="email" name="email" placeholder="email" />
      </div>
      <div class="input-container lock">
        <input type="password" name="password" placeholder="password" />
      </div>
    </div>
    <div class="flex flex-col space-y-4">
      <button class="">Sign Up</button>
      <a
        href="#"
        class="btn btn-transparent"
        pageTransition="in-left,login|out-left,signup"
        >Log In</a
      >
    </div>
  </form>
</div>
