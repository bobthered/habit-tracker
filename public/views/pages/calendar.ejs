<div
  class="page page-calendar bg-gray-800 page-anim-hidden flex flex-col justify-between p-4"
>
  <div class="w-full flex flex-row justify-between items-center">
    <button
      class="w-6 h-6 bg-primary-500 icon-chevron rotate-180 transform"
    ></button>
    <div class="text-3xl text-white">August 2020</div>
    <button class="w-6 h-6 bg-primary-500 icon-chevron"></button>
  </div>
  <div class="w-full grid grid-cols-7">
    <% const calendarColumns = ['S','M','T','W','T','F','S']; for( let i =
    0; i < calendarColumns.length; i++ ) { %>
    <div
      class="text-white text-2xl text-center border-b border-gray-700 px-2 h-0"
      style="padding-bottom:100%"
    >
      <%- calendarColumns[i] %>
    </div>
    <% } %> <% const calendarDaysPrevious =
    Array(2).fill(0).map((a,i)=>i+30); const calendarDaysCurrent =
    Array(30).fill(0).map((a,i)=>i+1); const calendarDaysNext =
    Array(10).fill(0).map((a,i)=>i+1); for ( let i = 0; i <
    calendarDaysPrevious.length; i++ ) { %>
    <a href="#" class="text-gray-600 text-2xl text-center px-1 h-0" style="padding-bottom:100%">
      <%- calendarDaysPrevious[i] %>
    </a>
    <% } %> <% for ( let i = 0; i < calendarDaysCurrent.length; i++ ) { %>
    <a href="#" class="text-white text-2xl text-center px-1 h-0 rounded-full<%- (i==3)?" bg-primary-500 shadow-btn-primary-500":"" %>" style="padding-bottom:100%">
      <%- calendarDaysCurrent[i] %>
    </a>
    <% } %> <% for ( let i = 0; i < calendarDaysNext.length; i++ ) { %>
    <a href="#" class="text-gray-600 text-2xl text-center px-1 h-0" style="padding-bottom:100%">
      <%- calendarDaysNext[i] %>
    </a>
    <% } %>
  </div>
  <button class="btn btn-transparent" pageTransition="out-modal,calendar">
    Close
  </button>
</div>
